<% layout('layout/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/katalog.css">
    <div class="container-fluid">
        <a href="/">
            <h2>
                < Kembali</h2>
        </a>
        <br>
        <div class="wrapper">
            <div class="d-flex justify-content-between align-items-center" id="header">
                <h2>Daftar Katalog Anda</h2>
                <div>
                    <a href="/katalog/new/" class="btn btn-primary">Tambah</a>
                    <a href="/katalog/" class="btn btn-danger ml-auto">Cancel</a>
                </div>
            </div>
            
            <% for (let katalog of katalogs) { %>
                <a href="/katalog/<%= katalog.id %>" title="<%= katalog.judul %>">
                    <div class="row" id="elmKatalog">
                        <div class="row">
                            <h3><%= katalog.judul %></h3>
                            <p><%= katalog.deskripsi %></p>
                            <% count = 0 %>
                            <% for(let film of katalog.film) { %>
                                <div class="poster card" style="width: 10rem;">
                                    <img src="https://image.tmdb.org/t/p/w220_and_h330_face<%= film.link_cover %>"
                                    class="card-img-top" srcset="/t/p/w220_and_h330_face<%= film.link_cover %> 2x"
                                    alt="<%= film.judul %>">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <%= film.judul %>
                                        </h5>
                                        <p class="card-text">
                                            <%= film.tahunRilis %> | <%= film.rating %>
                                        </p>
                                    </div>
                                </div>
                                <% count+=1 %>
                                <% if(count >= 6) { %>
                                    <% break; %>
                                    <% } %>
                                    <% } %>
                        </div>
                        <div class="ml-auto">
                            <!-- Your first button -->
                            <a href="/katalog/<%= katalog.id %>/edit/" class="btn btn-primary">Ubah</a>
                            <!-- Your second button -->
                            <a href="/katalog/<%= katalog.id %>/delete/" class="btn btn-danger">Hapus</a>
                        </div>
                    </div>
                </a>
            <% } %>
        </div>
    </div>