<% layout('layout/boilerplate') %>
    <link rel="stylesheet" href="/stylesheets/katalog.css">
    <div class="container-fluid">
        <a href="/">
            <h2>
                < Kembali</h2>
        </a>
        <br>
        <div class="wrapper">
            <div class="d-flex justify-content-between align-items-center" id="header">
                <h2>Daftar Katalog Anda</h2>
                <div>
                    <a href="/katalog/new/" class="btn btn-primary">Tambah</a>
                    <a href="/katalog/" class="btn btn-danger ml-auto">Cancel</a>
                </div>
            </div>
        </div>
        <div class="container-fluid">

            <% for (let katalog of katalogs) { %>
                <div class="row align-items-start my-3" id="elmKatalog">
                    <div class="col-xg-5 col-lg-4 col-md-2">
                        <h3 class="two-line">
                            <%= katalog.judul %>
                        </h3>
                        <p class="two-line">
                            <%= katalog.deskripsi %>
                        </p>
                    </div>
                            <% count=0 %>
                            <% for(let film of katalog.film) { %>
                                <div class="col-xg-6 col-lg-7 col-md-9" style="width: 6rem;">
                                    <img src="https://image.tmdb.org/t/p/w220_and_h330_face<%= film.link_cover %>"
                                    class="card-img-top" srcset="https://image.tmdb.org/t/p/w220_and_h330_face<%= film.link_cover %> 4x"
                                    alt="<%= film.judul %>">
                                </div>
                                <% count+=1 %>
                                <% if(count>= 6) { %>
                                    <% break; %>
                                    <% } %>
                                    <% } %>
                    <div class="col-md-1 align-items-center ms-auto">
                        <div class="justify-content-between align-items-center">
                            <a href="/katalog/edit/<%= katalog.id %>" class="btn btn-primary" id="Ubah">Ubah</a>
                            <br>
                            <br>
                            <form action="/katalog/<%= katalog._id %>?_method=DELETE" method="POST">
                                <button class="btn btn-danger" id="Hapus">Hapus</button>
                            </form>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>